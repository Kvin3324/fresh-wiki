<style media="screen">
  img {
    max-width: 200px;
    max-height: 200px;
  }
</style>

<p id="notice"><%= notice %></p>

<h1><%= @article.title %></h1>

<p>
  <%= image_tag @article.image_url, align: 'right', style: 'padding-left: 30px;' %>
  <%= @article.body %>
</p>

<div class="links-sign-in mb-5">
  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <% end %>
  <%= link_to 'Back', articles_path %>
</div>
